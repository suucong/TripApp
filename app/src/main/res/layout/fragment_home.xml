<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:scrollbarThumbVertical="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:layout_marginBottom="10dp" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_gray_hard_round"
                app:iconifiedByDefault="false"
                app:queryBackground="@color/empty"
                app:queryHint="이번 겨울에는 제주도 여행"></androidx.appcompat.widget.SearchView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="이런 테마는 어때요"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView1"
                android:layout_width="414dp"
                android:layout_height="131dp"
                android:orientation="horizontal"
                android:scrollbarThumbHorizontal="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/empty"
                        android:src="@drawable/img_busan" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@color/gray_bar" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="이런 지역은 어때요"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView2"
                android:layout_width="414dp"
                android:layout_height="131dp"
                android:orientation="horizontal"
                android:scrollbarThumbHorizontal="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton_1"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton_2"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton_3"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton_4"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton_5"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton_6"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@color/gray_bar" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="금주 인기 여행 후기"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView3"
                android:layout_width="414dp"
                android:layout_height="180dp"
                android:scrollbarThumbHorizontal="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton_1_"
                        android:layout_width="280dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton_2_"
                        android:layout_width="280dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@color/gray_bar" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/WatchReviewAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_white_hard_round"
                android:fontFamily="@font/pretendard_regular"
                android:text="전체보기 >" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="가장 많이 찾아본 여행 후기"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView4"
                android:layout_width="414dp"
                android:layout_height="180dp"
                android:scrollbarThumbHorizontal="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton2_1"
                        android:layout_width="280dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@color/gray_bar" />

                    <ImageButton
                        android:id="@+id/imageButton2_2"
                        android:layout_width="280dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@color/gray_bar" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/WatchReviewAll2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="65dp"
                android:background="@drawable/button_white_hard_round"
                android:fontFamily="@font/pretendard_regular"
                android:text="전체보기 >" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

